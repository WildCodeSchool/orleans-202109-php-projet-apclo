<div class="container-sm">
	<div class="row g-5">
		{% for adoption in adoptions %}
			<div class="col-sm-6 col-lg-4 column">
				<div class="card card-cat mb-3">
					<img class="card-img-top float-top" src={% if adoption.image is not empty %} "uploads/{{adoption.image}}" {% else %} "assets/images/cat-profil.svg" {% endif %} alt="Card image cap">
					<div class="card-body">
						<h3 class="card-title text-center">{{adoption.name}}</h3>
						<div class="card-text description">
							<ul>
								<li><img class="logo calendar" src="/assets/images/birth-day-logo.svg" alt="calendar">{{adoption.birth_date}}</li>
								<li><img class="logo" src="/assets/images/gender-logo.svg" alt="gender">{{adoption.gender}}</li>
							</ul>
							<a href="/chats/show?id={{adoption.id}}" class="btn btn-circle btn-lg">+</a>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>
