{% extends 'layoutAdmin.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/style-admin.css">
	<link rel="stylesheet" href="/assets/css/admin-show.css">
{% endblock %}

{% block title %}
	Admin - Actualités - {{ parent() }}
{% endblock %}

{% block content %}
	<div class="banner"></div>
	<div class="title">
		<h1 class="pt-3">Admin / Actualités</h1>
	</div>
	<div class="container-sm">

		<div class="row my-4 py-2 text-center header">
			<div class="col-md-1">
				<a href="/admin/actualites/ajouter" class="btn btn-add d-flex ms-4  justify-content-center  fs-6 btn-lg">Ajouter</a>
			</div>
			<div class="col-md-3 fs-3 d-flex justify-content-center align-items-center">Titre</div>
			<div class="col-md-3 fs-3 d-flex justify-content-center align-items-center">Date</div>
			<div class="col-md-5 fs-3 d-flex justify-content-center align-items-center">Modifier / Supprimer</div>
		</div>

		{% for actuality in actualities %}
			<div class="row my-4 mx-0 py-2 text-center member">

				<div class="col-md-1 d-flex justify-content-center align-items-center">
					<img src={% if actuality.image is not empty %} "/uploads/{{ actuality.image }}" {% else %} "/assets/images/newspaper.svg" {% endif %} class="avatar mt-1" alt="actuality image">
				</div>

				<div class="col-md-3 fs-5 d-flex justify-content-center align-items-center">
					{{ actuality.title }}
				</div>
				<div class="col-md-3 d-flex justify-content-center align-items-center fs-3">
					{{ actuality.date }}
				</div>
				<div class="col-md-5 fs-3 d-flex justify-content-center align-items-center">
					<a href="/admin/actualites/editer?id= {{ actuality.id }}" class="btn btn-lg btn-edit d-flex fw-bold me-3 fs-6">Éditer</a>
					<form method="POST" action="/admin/actualites/supprimer">
						<input type="hidden" name="id" value="{{ actuality.id }}">
						<button class="btn btn-lg btn-delete fw-bold fs-6">Supprimer</button>
					</form>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
