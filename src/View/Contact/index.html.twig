<head>
	<link rel="stylesheet" href="/assets/css/form.css" type="text/css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
	<div class="container d-flex align-items-start flex-column px-5 mt-2">
		{% if errors is not empty %}
			<div class="alert alert-danger">
				{% for error in errors %}
					<div>
						<p class="text-danger alert alert-danger">{{error}}</p>
					</div>
				{% endfor %}
			</div>
		{% endif %}
		
		<div class="form_coordinates_title">
			<h2>Formulaire</h2>
		</div>


		<div class="form_coordinates_title">
			<p>Vos coordonnées :</p>

			<div class="form_box">
				<form method="POST" action="">


					<div class="form-group">
						<label for="lastname" class="form-label">Nom :</label>
						<input type="text" value="{{ stamp.lastname }}" id="lastname" class="form-control" name="lastname" placeholder="Dupont" required/>
					</div>


					<div class="form-group">
						<label for="firstname" class="form-label mt-3">Prénom :</label>
						<input type="text" value="{{ stamp.firstname }}" id="firstname" class="form-control" name="firstname" placeholder="Eric" required/>
					</div>


					<div class="form-group">
						<label for="phone" class="form-label mt-3">Numéro de Téléphone :</label>
						<input type="tel" value="{{ stamp.tel }}" id="tel" class="form-control" type="tel" name="tel" placeholder="02 38 52 77 82" required/>
					</div>


					<div class="form-group">

						<label for="email" class="form-label mt-3">Mail :</label>
						<input type="email" value="{{ stamp.email }}" id="email" class="form-control mb-3" name="e-mail" placeholder="eric.dupont@gmail.com" required/>
					</div>

				</div>

			</div>


			<div class="form-group_message">
				<div class="form_coordinates_title col mt-4">
					<p>Votre message :</p>
				</div>
				<div class="form_subject">

					<div class="card_02">

						<div form="form-group_subject">
							<label class="col-form mb-2" for="subject">Sujet :</label>
							<select id="subject" name="subject" class="form-control" required>
								<option value="subject" disabled selected>-- Choisir un champ --</option>
								<option value="une question">Une question</option>
								<option value="un renseignement">Un renseignement</option>
								<option value="une adoption">Une adoption</option>
								<option value="une visite">Une visite</option>
							</select>

							<label for="message" class="col-form">Message :</label>
							<textarea id="message" name="message" class="col-10 mt-2 pr-2 pl-2" placeholder="Insérer votre message :" required></textarea>
							<div class="button d-flex align-items-end flex-column mx-4">
								<button class="btn btn-light mt-4">Envoyer</button>
							</div>
						</div>
					</div>
				</div>
			</form>

		</div>
	</body>
</body>
