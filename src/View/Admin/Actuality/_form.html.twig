{% if errors is not empty %}
    <div class="container-alert d-flex justify-content-center">
        <div class="alert alert-danger d-flex justify-content-center p-2 alert-dismissible fade show">
            {% for error in errors %}
                <div>{{error}}</div>
                <button type="button" class="btn-close d-flex align-items-center align-self-center " data-bs-dismiss="alert" aria-label="Close"></button>
            {% endfor %}
        </div>
    </div>
{% endif %}

<div class="container-sm justify-content-center d-flex mt-5">
    <form method="post" enctype="multipart/form-data">  
        <div class="form-group mb-3 pt-3">
            <label  for="title" class="form-label">Titre :</label>
            <input type="text" class="form-control" id="title" value="{{ actuality.title }}" name="title">
        </div>
            <div class="form-group mb-3">
                <label  for="date" class="form-label">Date :</label>
                <input type="date" class="form-control" id="date" value="{{ actuality.date }}" name="date">
            </div>
                <div class="form-group mb-3">
                <label  for="description" class="form-label">Description :</label>
                <textarea  id="description" class="form-control" name="description">{{ actuality.description }}</textarea>
            </div>
            <div class="form-group mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="file" name="image" id="image" class="form-control">
            </div>
                <div class="d-flex justify-content-center align-items-center align-self-center m-5 flex-column flex-sm-row">
                    <a href="/admin/actualites/index" class="btn-lg btn-link px-5 fw-bold offset-1 text-secondary">< Retour</a>
                    <button class="btn btn-lg btn-succes button-actuality-form px-5">{{ button_name|default('Ajouter') }}</button>
                </div>
    </form>
</div>
