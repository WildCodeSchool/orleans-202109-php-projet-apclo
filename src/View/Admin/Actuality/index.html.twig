{% extends 'layoutAdmin.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/banner.css">
    <link rel="stylesheet" href="/assets/css/style-admin.css">
    <link rel="stylesheet" href="/assets/css/admin-actuality.css">
{% endblock %}

{% block content %}
    <div class="banner"></div>
        <div class="title">
            <h1>Admin / Actualités</h1>
        </div>

            <div class="container-sm">
                <div class="card card-entity d-flex flex-row mb-5">
                    <a href="/admin/actualités/ajouter" class="btn btn-entity btn-circle d-flex align-items-center align-self-center ms-4 btn-lg">+</a> 
                    <div class="card-body card-entity-title d-flex justify-content-center">Titre</div>
                    <div class="card-body card-entity-date d-flex justify-content-center">Date</div>
                </div>
                    {% for actuality in actualities %}
                        <div class="card card-actuality d-flex flex-row mb-5 p-3">
                            <div class="card-title-actuality d-flex flex-row align-items-center gap-3">
                                <img src="/assets/images/newspaper.svg" class="icon-newspaper" alt="icon-newspaper">
                                <div>{{ actuality.title }}</div>
                            </div>
                                <div class="card-body d-flex flex-row justify-content-end align-items-center">
                                    <div class="card-date me-3 pr-3">{{ actuality.date }}</div>
                                    <a href = "/admin/actualités/éditer?id= {{ actuality.id }}" class="btn btn-edit d-flex align-items-center me-3 btn-primary">Éditer</a>
                                </div>
                        </div>
                    {% endfor %}
            </div>

{% endblock %}