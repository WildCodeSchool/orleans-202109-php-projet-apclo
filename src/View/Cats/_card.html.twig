
<div class="container-sm mb-5">
  <img src="assets/images/separator.svg" alt="line-break">
  <div class="row g-5">
		{% for cat in cats %}
			<div class="col-sm-6 col-lg-4 column">
				<div class="card card-cat mb-3">
					<img class="card-img-top float-top position-relative" src={% if cat.image is not empty %}"/uploads/{{cat.image}}"{% else %} "assets/images/cat-profil.svg" {% endif %} alt="Card image cap">
					{% if cat.adoption_date is not null %} <img src="/assets/images/adopted.png" class="adopted position-absolute top-0 end-0 mt-4" alt="adopted">{% endif%}
					<div class="card-body cat-card-body">
						<h3 class="card-title text-center">{{cat.name}}</h3>
						<div class="card-text description">
							<ul>
								<li><img class="logo calendar" src="/assets/images/birth-day-logo.svg" alt="calendar">{{cat.birth_date}}</li>
								<li><img class="logo" src="/assets/images/gender-logo.svg" alt="gender">{{cat.gender}}</li>
							</ul>
							<a href="/chats/show?id={{cat.id}}" class="btn btn-circle btn-lg">+</a>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>
