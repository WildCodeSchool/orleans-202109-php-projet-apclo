{% extends 'layoutAdmin.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/banner.css">
	<link rel="stylesheet" href="/assets/css/style-admin.css">
	<link rel="stylesheet" href="/assets/css/adminCats.css">
{% endblock %}

{% block content %}
	<div class="banner"></div>
	<div class="title">
		<h1>Admin / Chats</h1>
	</div>
	<div class="container-sm">
		<div class="card card-entity d-flex flex-row mb-5">
			<a href="/admin/chat/ajouter" class="btn btn-entity btn-circle d-flex justify-content-center align-items-center align-self-center ms-4 btn-lg fs-3">+</a>
			<div class="card-body card-entity-name d-flex justify-content-center fs-3">Nom</div>
			<div class="card-body card-entity-date_of_birth d-flex justify-content-center fs-3">Date de naissance</div>
		</div>
		{% for cat in cats %}
			<div class="card card-cat d-flex flex-row mb-5 p-3 flex-column flex-sm-row">
				<div class="card-title-cat d-flex flex-row align-items-center gap-3">
					<img src="/uploads/{{ cat.image }}" class="catPhotos" alt="cat image">
					<div class="card-cat fs-5">{{ cat.name }}</div>
				</div>
				<div class="card-body d-flex flex-row justify-content-end align-items-center flex-column flex-sm-row">
					<div class="card-date me-3 pr-3 fs-5">{{ cat.birth_date }}</div>
					<a href="/admin/chat/editer?id={{ cat.id }}" class="btn btn-edit d-flex align-items-center me-3 btn-primary">Ã‰diter</a>
					<form method="POST" action="/admin/chat/supprimer">
						<input type="hidden" name="id" value="{{ cat.id }}">
						<button class="btn btn-delete btn-primary mt-4">Supprimer</button>
					</form>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
